= simple_form_for article do |f|
  - if article.errors.any?
    #error_explanation
      %h2
        = pluralize(article.errors.count, "error")
        prohibited this article from being saved:

      %ul
      - article.errors.full_messages.each do |msg|
        %li= msg

  .inputs
    = f.input :title
    = f.input :content
    = f.association :parent, :as => :hidden

  .actions
    = f.button :submit
